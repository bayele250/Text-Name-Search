@model Text_Name_Search.Models.Article

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Articles", "Search", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jQueryAjaxPostArticle(this);", data_resetUrl = Url.Action("Articles", "Search", new { Articles = ""}) }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Article</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Articles, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Articles, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Articles, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" id="btnSubmitArticle"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Articles")
</div>
